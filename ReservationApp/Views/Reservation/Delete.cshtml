@model Product
<h1>Product</h1>
<form method="post" asp-action="Delete">

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h1 class="text-primary">Delete Product</h1>
        </div>
        <div class="mb-2">
            <label>Name</label>
            <input asp-for="ProductName" disabled class="form-control" />
        </div>
        <div class="mb3">x
            <label >Description</label>
            <input asp-for="ProductDescription" disabled class="form-control"/>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="product" asp-action="Index" class="btn btn-primary">Back To List</a>
    </div>
</form>

