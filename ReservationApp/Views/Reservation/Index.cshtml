@model IEnumerable<ReservationApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div>
        <h2 class="text-primary">Product List</h2>
    </div>
    <div class="col-6 align-items-end">
         @if (User.IsInRole("admin"))
      {
        <a asp-controller="Product" asp-action="Create" class="btn btn-primary" width="20%"><i class="bi bi-plus-circle-fill"></i>&nbsp;Add New Product</a>
      }
    </div>
</div>
<br/>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)

            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td width="20%">
                @Html.DisplayFor(modelItem => item.ProductDescription)
            </td>
            <td width="10%">
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td width="20%">
                <img style="height:60px;width:80px" src="../Uploads/@item.Image"/>
            </td>


            <td>
                <a asp-controller="Order" asp-action="CreateOrder" asp-route-id="@item.ProuctId" class="btn btn-outline-primary mx-4">Order</a>
                @if (User.IsInRole("admin"))
                {
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ProuctId" class="btn btn-outline-primary mx-4">Edit</a>
                    <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.ProuctId" class="btn btn-outline-primary mx-4">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
