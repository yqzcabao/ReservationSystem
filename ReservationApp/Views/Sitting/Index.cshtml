@model IEnumerable<ReservationApp.Models.Sitting>

@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div>
        <h2 class="text-primary">Sitting List</h2>
    </div>
    <div class="col-6 align-items-end">
         @if (User.IsInRole("admin"))
      {
        <a asp-controller="Sitting" asp-action="Create" class="btn btn-primary" width="20%"><i class="bi bi-plus-circle-fill"></i>&nbsp;Add New Sitting</a>
      }
    </div>
</div>
<br/>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SittingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SittingDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SittingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SittingDescription)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SittingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SittingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SittingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
